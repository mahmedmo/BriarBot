# BriarBot Environment Configuration Template
# Copy this file to .env and fill in your values

# ================================
# Required Configuration
# ================================

# Discord Bot Token (required)
# Get this from https://discord.com/developers/applications
BOT_TOKEN=your_discord_bot_token_here

# ================================
# Optional Configuration
# ================================

# Node Environment (development, production)
NODE_ENV=production

# Debug Configuration
# Uncomment to enable debug logs
# DEBUG=bot:*

# Timezone (defaults to UTC if not set)
TIMEZONE=UTC

# ================================
# Performance Tuning
# ================================

# Cache Settings
CACHE_TTL_DAYS=30
CACHE_MAX_SIZE=500
CACHE_CLEANUP_INTERVAL=3600000

# Rate Limiting
RATE_LIMIT_MAX_RETRIES=12
RATE_LIMIT_BASE_DELAY=1000
RATE_LIMIT_MAX_DELAY=300000

# Memory Settings
MAX_MEMORY_RESTART=1024M
MEMORY_CLEANUP_INTERVAL=1800000

# ================================
# Optional Integrations
# ================================

# If using Redis for extended caching (optional)
# REDIS_URL=redis://redis:6379

# If using monitoring (optional)
# GRAFANA_ADMIN_PASSWORD=secure_password_here

# ================================
# Development Only
# ================================

# Uncomment for development
# PUPPETEER_HEADLESS=false
# PUPPETEER_DEVTOOLS=true